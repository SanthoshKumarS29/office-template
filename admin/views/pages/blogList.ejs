<!DOCTYPE html>
<html>
<head>
  <title>Blogs</title>
  <link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css">
  <link rel="stylesheet" href="/css/admin/admin.css">
  <link rel="stylesheet" href="/css/siteTheme.css">
</head>
<body>
  <div class="d-flex justify-content-between align-items-center py-4">
    <h3>All Blogs</h3>
    <a href="/admin/blogs/new" class="btn btn-secondary">Create New Blog</a>
  </div>
  <table>
    <thead>
      <tr class="table-head">
        <th>Title</th>
        <th>Slug</th>
        <th>Category</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% blogs.forEach(b => { %>
        <tr class="table-body">
          <td><%= b.title %></td>
          <td><%= b.slug %></td>
          <td><%= b.category %></td>
          <td><%= new Date(b.createdAt).toLocaleString() %></td>
          <td class="d-flex align-items-center gap-2">
            <a href="/admin/blogs/<%= b._id %>/edit" class="btn btn-success btn-sm">Edit</a>
            <form method="post" action="/admin/blogs/<%= b._id %>/delete" style="display:inline;">
              <button onclick="return confirm('Delete this blog?')" class="btn btn-danger btn-sm">Delete</button>
            </form>
            <a href="/blog/<%= b.slug %>" target="_blank">View</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
