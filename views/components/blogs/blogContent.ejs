<section>
    <h1>Detail page</h1>
    <article>
        <h1>
            <%= blog.title %>
        </h1>
        <p><em>Category: <%= blog.category %></em></p>
        <% if (blog.image) { %>
            <img src="<%= blog.image %>" alt="<%= blog.title %>" style="max-width:100%; height:auto;" />
            <% } %>
                <div class="content">
                    <%- blog.content %> <!-- unescaped: we trust saved HTML from TinyMCE -->
                </div>
    </article>
</section>