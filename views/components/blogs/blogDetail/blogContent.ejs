<div>
    <div class="py-4 text-center col-lg-10 mx-auto">
        <span class="blog-detail-category-highlighter"><%= blog.category %>
        </span>
        <h1 class="display-5"><%= blog.title %></h1>
    </div>
    <div class="pb-3 d-flex flex-column justify-content-center gap-2 align-items-center">
        <div class="d-flex gap-2 align-items-center">
            <img src="/images/png/icon-dummy.png" alt="Authors name" width="44" height="44"
                class="img-fluid rounded-pill">
            <strong class="fs-6 fw-medium" itemprop="name">Santhosh Kumar -</strong>
            <time datetime="<%= blog.updatedAt.toISOString() %>" itemprop="dateModified">
                    <%= blog.updatedAt.toLocaleDateString('en-US', { month: 'short' , day: '2-digit' , year: 'numeric'
                        }).replace(',', '' ) %>
            </time>
            <p>- 5min read</p>
        </div>
        <div class="d-flex align-items-center gap-3">
            <button class="blog-share-btn">
                <img src="/images/png/linkedin.png" alt="Link-Icon" width="18" height="18" class="img-fluid">
                <span>Share</span>
            </button>
            <button class="blog-copy-btn">
                <img src="/images/png/link-icon.png" alt="Link-Icon" width="18" height="18" class="img-fluid">
                <span>Copy</span>
            </button>
        </div>
    </div>
    <div>
        <% if (blog.image) { %>
            <div class="d-flex justify-content-center pb-3">
                <img src="<%= blog.image %>" alt="<%= blog.title %>" width="1500" height="600"
                    class="img-fluid rounded-2" />
            </div>
            <% } %>
            <%- include('./tableOfContent.ejs') %>
            <div class="blog-content">
                <%- blog.content %>
            </div>
    </div>
</div>